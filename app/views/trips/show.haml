- content_for :title do
  = "#{@trip}"
- content_for :subnavigation do
  %ul.subnavigation
    %li= link_to "Edit trip details", edit_trip_path(@trip)
    %li= link_to "Schedule", trip_schedule_path(@trip)
    %li= link_to "Registrations", trip_registrations_path(@trip)

%dl
  %dt City
  %dd= @trip.city
  %dt Begins
  %dd= @trip.start
  %dt Ends
  %dd= @trip.end
  %dt Facility
  %dd= link_to @trip.facility, @trip.facility

.section
  %h2 At-a-glance
  %ul
    %li= pluralize(@authorized_registrations.size, "authorized registration")
    %li
      %ul
        %li= "#{@authorized_registrations.scheduled.size} scheduled"
        %li= "#{@authorized_registrations.unscheduled.size} unscheduled"