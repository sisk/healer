- options ||= {}
- html_class = ""
- html_class << " #{options[:size]}" if options[:size].present?
.row.operation.inline[operation]{ :class => html_class }
  %h5
    - if permitted_to? :edit, operation
      = link_to operation, edit_case_operation_path(operation.patient_case), :remote => true
    - else
      = operation
    - if operation.date
      %small= "(#{operation.date.to_s})"
  .inline-navigation.noprint
    %ul.inline-list
      - if permitted_to? :edit, operation
        %li
          - if operation.implant.present?
            = link_to "Edit Implant", edit_operation_implant_path(operation), :remote => true
          - else
            = link_to "Add Implant", new_operation_implant_path(operation), :remote => true, :class => :incomplete
    = render :partial => "xrays/collection", :locals => { :operation => operation, :patient_case => operation.patient_case, :xrays => operation.patient_case.xrays.post_op, :editable => true }
