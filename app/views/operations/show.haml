- content_for :title do
  = "#{@operation}"
- content_for :subnavigation do
  %ul.subnavigation
    - if permitted_to? :edit, @operation
      %li= link_to "Edit operation details", edit_diagnosis_operation_path(@diagnosis,@operation)
    - if @operation.registration.present?
      %li= link_to "Return to registration", registration_path(@operation.registration)
      
.operation_summary
  %dl
    %dt Registration ID
    %dd= @operation.registration_id
    %dt Body Part
    %dd= @operation.body_part
    %dt Procedure
    %dd= @operation.procedure
    %dt Primary Surgeon
    %dd= @operation.primary_surgeon
    %dt Secondary Surgeon
    %dd= @operation.secondary_surgeon
    %dt Anesthesiologist
    %dd= @operation.anesthesiologist
    %dt Date
    %dd= @operation.date
    %dt Approach
    %dd= @operation.approach
    %dt Difficulty
    %dd= @operation.difficulty
    %dt Graft
    %dd= @operation.graft
    %dt Ambulatory Order
    %dd= @operation.ambulatory_order
  %h3 Notes
  %p= simple_format(@operation.notes)


.section
  %h2 Implant
  %ul.subnavigation
    - if @operation.implant.blank?
      %li= link_to "Add implant", new_operation_implant_path(@operation)
    - else
      %li= link_to "Edit implant details", operation_implant_path(@operation)
