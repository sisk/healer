- content_for :title do
  = "#{@trip} - Schedule - Day #{@day}"
- content_for :subnavigation do
  %ul.subnavigation
    %li= link_to "Full schedule", trip_schedule_path(@trip)
    %li= link_to "Edit schedule", edit_trip_schedule_path(@trip)
#show_schedule_list
  %ul
    - @rooms.each do |room|
      %li= link_to room, "##{dom_id(room)}"
  - @rooms.each do |room|
    - patient_cases = @trip.patient_cases.room(room.id).day(@day)
    .patient_case_list.day{ :id => dom_id(room) }
      %h2= room
      %p= link_to "Show all days for #{room}", trip_schedule_path(@trip, :room => room.id)
      = render :partial => "schedule/inline_patient_case", :as => :patient_case, :collection => patient_cases
