- content_for :title do
  = "Schedule - #{@room}"
- content_for :subtitle do
  = @trip
- content_for :subnavigation do
  %ul
    %li= link_to "Full schedule", trip_schedule_path(@trip)
    %li= link_to "Edit schedule", edit_trip_schedule_path(@trip)
#show_schedule_list
  %ul
    - @number_of_days.times do |i|
      - day_num = i + 1
      %li= link_to "Day #{day_num}", "#day_#{day_num}"
  - @number_of_days.times do |i|
    - day_num = i + 1
    - patient_cases = @trip.patient_cases.room(@room.id).day(day_num)
    .patient_case_list.day{ :id => "day_#{day_num}" }
      %h2= "Day #{day_num}"
      %p= link_to "Show all rooms for Day #{day_num}", trip_schedule_path(@trip, :day => day_num)
      = render :partial => "schedule/inline_patient_case", :as => :patient_case, :collection => patient_cases