.patient_case.snapshot
  =# patient_image(patient_case.patient, :tiny)
  .details
    %h3= patient_case.patient
    /
      %dl
        %dt Body Part(s)
        %dd= patient_case.body_part
        - unless patient_case.location.blank?
          %dt Location
          %dd= patient_case.location
        %dt Case #
        %dd= patient_case.id