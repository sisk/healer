cases = $("#<%= dom_id(@patient_case) %>").closest(".cases")
$("#<%= dom_id(@patient_case) %>").fadeOut();
$("#<%= dom_id(@patient_case) %>").remove();

if (cases.find(".unauthorized .patient_case").length === 0) {
  cases.find(".unauthorized .header").addClass("hide");
}

cases.find(".authorized .header").removeClass("hide");
cases.find(".authorized form").append('<%= escape_javascript(render :partial => "trip_patients/authorized_appointment", :object => @patient_case.appointment, :as => :appointment) %>');
cases.find(".authorized").removeClass("hide");
