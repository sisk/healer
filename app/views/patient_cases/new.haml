- content_for :title do
  = "New Case"

%ul#new_case_context_toggle
  %li.new
    %span.fake_link Add new patient
  %li.existing
    %span.fake_link Attach to existing patient

#new_case_form
  .new{ :class => "#{"hide" if params[:person_id]}" }
    = semantic_form_for [parent,resource], :url => trip_cases_path(parent), :html => { :multipart => true, :id => "new_patient_case" } do |f|
      = f.semantic_errors
      = f.input :created_by_id, :as => :hidden, :input_html => { :value => current_user.id }
      .column-3#case_details_form= render :partial => "case_details_form", :locals => { :f => f, :patient_case => resource }
      = f.semantic_fields_for :patient do |p|
        = p.semantic_errors
        = p.input :country, :as => :hidden, :value => @trip.try(:country)
        .column-3
          = p.inputs do
            = p.input :name_first, :label => 'First Name'
            = p.input :name_middle, :label => 'Middle Name'
            = p.input :name_last, :label => 'Last Name'
            = p.input :photo, :as => :file, :label => "Photo"
        .column-3
          = p.inputs do
            = p.input :male, :as => :radio, :label => "Gender", :collection => [["Male", true], ["Female", false]]
            = p.input :birth, :as => :date, :label => "Birth", :start_year => 1900, :end_year => Time.now.year
            =# f.input :death, :as => :date, :label => "Death"
            = p.input :height_cm, :label => 'Height (cm)'
            = p.input :weight_kg, :label => 'Weight (kg)'
      = f.buttons do
        = f.commit_button "Save Case"

  .existing{ :class => "#{"hide" unless params[:person_id]}" }
    = semantic_form_for [parent,resource], :url => trip_cases_path(parent), :html => { :multipart => true, :id => "existing_patient_case" } do |f|
      = f.semantic_errors
      = f.input :created_by_id, :as => :hidden, :input_html => { :value => current_user.id }
      = f.inputs do
        = f.input :patient_id, :as => :select, :label => 'Patient', :collection => @all_patients.map{ |p| ["#{p.id} - #{p.to_s}", p.id] }, :selected => params[:person_id]
      #case_details_form= render :partial => "case_details_form", :locals => { :f => f, :patient_case => resource }
      = f.buttons do
        = f.commit_button "Save Case"

- content_for :script do
  :javascript
    $('#new_case_context_toggle li').click(function(event) {
      if ($(this).attr("class") === "new") {
        $("#new_case_form .existing").addClass("hide");
        $("#new_case_form .new").removeClass("hide");
      } else {
        $("#new_case_form .new").addClass("hide");
        $("#new_case_form .existing").removeClass("hide");
      }
    });
