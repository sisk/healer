- if xray.photo.exists?
  = f.simple_fields_for :xrays, xray do |x|
    = xray_preview(xray, :size => :small)
- else
  = f.simple_fields_for :xrays, xray do |x|
    = x.input :diagnosis_id, :as => :hidden
    = x.input :photo, :as => :file, :label => "Photo"
    =# x.input :date_time, :as => :datepicker, :label => "When Taken"
    =# x.input :taken_at, :label => "Facility where taken"