- content_for :title do
  = "#{@registration}"
.section.patient
  = render :partial => "patients/shared/snapshot", :locals => { :patient => @registration.patient }
.section
  %h2 Diagnoses
  - @registration.diagnoses.each do |diagnosis|
    .diagnosis
      %p= diagnosis

.section
  %h2 Operation
  - if @registration.operations.empty?
    %p= link_to "Add Operation", new_registration_operation_path(@registration)
  - else
    %ul
      - @registration.operations.each do |operation|
        %li= link_to "Edit Operation", registration_operation_path(operation)