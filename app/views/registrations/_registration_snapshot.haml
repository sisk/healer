.registration.snapshot{ :class => (registration.likely_bilateral? ? "bilateral" : "") }
  =# patient_image(registration.patient, :tiny)
  .details
    %h3= registration.patient
    %dl
      %dt Registration #
      %dd= registration.id
      %dt Status
      %dd= registration.status
      - unless registration.location.blank?
        %dt Location
        %dd= registration.location