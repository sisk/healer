- content_for :title do
  = "#{@trip} - Patient Registrations"
- content_for :subnavigation do
  %ul.subnavigation
    %li= link_to "Add registration", new_trip_registration_path(@trip)
#registration_list
  %ul
    %li= link_to "Authorized", "#authorized"
    %li= link_to "Waiting", "#waiting"
  #authorized
    = render :partial => "summary", :collection => @authorized_registrations, :as => :registration
  #waiting
    = render :partial => "summary", :collection => @unauthorized_registrations, :as => :registration

  