!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type" }
    = csrf_meta_tag
    = javascript_include_tag "jquery/jquery-1.4.1.min"
    = javascript_include_tag "jquery/jquery-ui-1.8.2.custom.min"
    = javascript_include_tag :all
    =# stylesheet_link_tag :all
    = stylesheet_link_tag "ui-lightness/jquery-ui-1.8.2.custom"
    = stylesheet_link_tag "formtastic", "formtastic_changes"
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = yield :head
    %title<
      Healer
      - if yield :title
        = "- #{yield :title}"
  %body.bp
    #wrapper
      #head
        = render :partial => "layouts/shared/session"
        %ul#nav
          - if permitted_to? :index, Trip.new
            %li= link_to_unless_current "Trips", trips_path
          - if permitted_to? :index, Patient.new
            %li= link_to_unless_current "Patients", patients_path
          - if permitted_to? :index, BodyPart.new
            %li= link_to_unless_current "Body Parts", body_parts_path
          - if permitted_to? :index, Disease.new
            %li= link_to_unless_current "Diseases", diseases_path
      #content
        - if yield :title
          %h1= yield :title
        = yield :subnavigation
        = render :partial => "layouts/shared/alerts"
        = yield