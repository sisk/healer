!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type" }
    = stylesheet_link_tag "screen.css"
    = stylesheet_link_tag "print.css", :media => :print
    = stylesheet_link_tag "patient_certificate.css", :media => [:print, :screen]
    = yield :head
    %title<
      - if content_for?(:document_title)
        = "#{yield :document_title}"
  %body.bp.patient_certificate
    #wrapper
      #content
        #summary_header
          #sponsor_org
            = image_tag("organization/operation_walk_logo.jpg")
            %p
              Dr. Merrill A. Ritter
              %br/
              Presidente, Operation Walk
          - if content_for?(:sponsor_org)
            #host_org= yield :sponsor_org
        .title_section
          - if content_for?(:title)
            %h1.title= yield :title
          - if content_for?(:subtitle)
            %h2.subtitle= yield :subtitle
        = yield
      #footer
        %p.as_of.print_only= "#{Date.today}"
    = render :partial => "layouts/shared/default_javascript"
    = yield :script
