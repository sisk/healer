- title = @implant.operation.to_s
- title << " - #{@implant.operation.body_part}" if @implant.operation.body_part.present?
- content_for :title do
  = title
- content_for :subtitle do
  Implant Summary
- content_for :subnavigation do
  %ul.subnavigation
    - if @implant.present?
      = link_to "Edit Implant", edit_operation_implant_path(@operation)
.section
  - if @implant.present?
    = render :partial => "implants/summary/#{output_type(@implant)}", :object => @implant, :as => :implant
    .notes
      %h2 Notes
      %p= simple_format(@implant.notes)
  

  - else
    %p There is no implant on file for this operation.
    %p= "Would you like to #{link_to "add one", new_operation_implant_path(@operation)}?".html_safe