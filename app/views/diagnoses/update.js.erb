$("#diagnosis_inline_edit").dialog("close");
$("#diagnosis_inline_edit").html("");
var context = $('#<%= dom_id(@diagnosis) %>').attr("context");
$('#<%= dom_id(@diagnosis) %>').replaceWith('<%= escape_javascript(render :partial => "diagnoses/inline", :object => @diagnosis, :as => :diagnosis, :locals => { :options => { :remote => true, :size => :tiny } }) %>');
$('#<%= dom_id(@diagnosis) %>').attr("context",context);
$("#<%= dom_id(@diagnosis) %>").children(".nav").append('<span class="updated asterisk">Updated</span');
$("#<%= dom_id(@diagnosis) %>").children(".nav").find(".updated").fadeToggle(3000);